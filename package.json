{
  "name": "designkit-layout",
  "version": "0.0.2",
  "description": "Sass module for css flex layouts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-layout.git"
  },
  "author": {
    "name": "Jason Melgoza",
    "email": "jason@rightscale.com"
  },
  "style": "dist/designkit-layout.css",
  "scss": "src/scss/index.scss",
  "main": "dist/designkit-layout.css",
  "keywords": [
    "css",
    "scss",
    "postcss"
  ],
  "license": "MIT",
  "homepage": "https://github.com/rightscale-design/designkit-layout#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "bourbon": "^4.2.7",
    "clean-css": "^3.4.19",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-cli": "^2.5.2"
  },
  "scripts": {
    "start": "npm run build:serve",
    "serve": "http-server -p 9000 -o",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "build:scss": "./bin/scss",
    "build:prefix": "postcss -u autoprefixer -b 'last 2 versions' < src/css/_designkit-layout.css > dist/designkit-layout.css",
    "build:minify": "cleancss -o dist/designkit-layout.min.css dist/designkit-layout.css",
    "build:all": "npm run build:scss && npm run build:prefix && npm run build:minify",
    "build:serve": "run-p watch serve"
  }
}
