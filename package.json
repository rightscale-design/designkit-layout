{
  "name": "designkit-layout",
  "version": "0.0.1",
  "description": "Sass module for css *.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rightscale-design/designkit-layout.git"
  },
  "author": {
    "name": "Jason Melgoza",
    "email": "jason@rightscale.com"
  },
  "main": "css/designkit-layout.css",
  "style": "css/designkit-layout.css",
  "scss": "src/index.scss",
  "files": [
    "src",
    "css"
  ],
  "keywords": [
    "css",
    "Sass"
  ],
  "license": "MIT",
  "homepage": "https://github.com/rightscale-design/designkit-layout#readme",
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "bourbon": "^4.2.7",
    "clean-css": "^3.4.19",
    "cssmin": "^0.4.3",
    "http-server": "^0.9.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "postcss-cli": "^2.5.2"
  },
  "scripts": {
    "start": "npm run serve && npm run watch",
    "scss": "./bin/scss",
    "prefix": "postcss -u autoprefixer -b 'last 2 versions' < src/css/_designkit-layout.css > dist/designkit-layout.css",
    "minify": "cleancss -o dist/designkit-layout.min.css dist/designkit-layout.css",
    "build:all": "npm run scss && npm run prefix && npm run minify",
    "watch": "nodemon -e scss -x 'npm run build:all'",
    "serve": "http-server -p 9000 -o"
  }
}
